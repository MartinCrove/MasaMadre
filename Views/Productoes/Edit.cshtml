@model MASAMADREPROY.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadEnStock" class="control-label"></label>
        <input asp-for="CantidadEnStock" class="form-control" />
        <span asp-validation-for="CantidadEnStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Disponible" class="control-label"></label>
        <input asp-for="Disponible" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Disponible" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Imagen">Imagen (opcional)</label>
        <input type="file" name="imagen" class="form-control" />
        <span asp-validation-for="Imagen" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
